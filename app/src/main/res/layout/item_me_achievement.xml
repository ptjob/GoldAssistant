<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/body_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/body_color"
        android:orientation="horizontal" >

        <!-- 兼职成就item -->

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@color/body_color"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/body_color"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/qita"
                    android:paddingBottom="5dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="5dp"
                    android:text="其他"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/fontsize_30px" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text="京东网购用户访谈客串"
                    android:textColor="@color/item_titleColor"
                    android:textSize="@dimen/fontsize_40px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:background="@color/body_color"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="评语："
                    android:textColor="@color/ziti_orange"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/pingyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这位同学还不次哦"
                    android:textColor="@color/item_huise"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="15dip"
            android:layout_weight="0.3"
            android:background="#FEF9F5"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/icon_warn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/pingfentext"
                android:src="@drawable/other_icon_warn"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/pingfentext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dip"
                android:paddingTop="14dp"
                android:text="评  分"
                android:textColor="@color/item_huise"
                android:textSize="@dimen/fontsize_30px" />

            <Button
                android:id="@+id/baixian"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/pingfentext"
                android:background="@color/body_color" />

            <TextView
                android:id="@+id/pingfen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/baixian"
                android:layout_centerHorizontal="true"
                android:paddingBottom="20dip"
                android:paddingTop="10dp"
                android:text="优秀"
                android:textColor="@color/item_haoping"
                android:textSize="22sp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="10dip"
        android:background="@color/bottom_line" />

</LinearLayout>