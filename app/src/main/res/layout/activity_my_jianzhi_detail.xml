<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:viewFlow="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/body_color"
    android:orientation="vertical"
    tools:context="com.quark.fragment.HomeFragment" >

    <!-- 管理兼职 查看详细 -->

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/common_top" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dip"
                android:background="@color/body_color"
                android:orientation="horizontal"
                android:paddingTop="20dp" >

                <TextView
                    android:id="@+id/jz_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_jobtype_1"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="15dp"
                    android:paddingTop="8dp"
                    android:text="其他"
                    android:textColor="@color/body_color" />

                <TextView
                    android:id="@+id/jz_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/fontsize_40px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/mini_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/body_color" >

                    <TextView
                        android:id="@+id/jz_publish_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="25dp"
                        android:text="发布时间 "
                        android:textColor="@color/ziti_huise"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tttt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@id/jz_publish_time"
                        android:text="浏览次数:"
                        android:textColor="@color/ziti_huise"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/jz_view_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dip"
                        android:layout_toRightOf="@id/tttt3"
                        android:text=""
                        android:textColor="@color/ziti_orange"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/baomingshu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="已报名100人，差20人"
                        android:textColor="@color/ziti_huise"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/nav_huise" >
            </ImageView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:background="@color/body_color"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp" >

                    <TextView
                        android:id="@+id/jz_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/ziti_orange"
                        android:textSize="@dimen/ziti_19" />

                    <TextView
                        android:id="@+id/jz_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元/日"
                        android:textColor="@color/ziti_head"
                        android:textSize="@dimen/ziti_19" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商家活动"
                        android:textColor="@color/ziti_huise"
                        android:textSize="@dimen/fontsize_30px" />

                    <TextView
                        android:id="@+id/jz_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text=""
                        android:textColor="@color/ziti_head"
                        android:textSize="@dimen/fontsize_30px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作时间"
                        android:textColor="@color/ziti_huise"
                        android:textSize="@dimen/fontsize_30px" />

                    <TextView
                        android:id="@+id/jz_shijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text=""
                        android:textColor="@color/ziti_head"
                        android:textSize="@dimen/fontsize_30px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作区域"
                        android:textColor="@color/ziti_huise"
                        android:textSize="@dimen/fontsize_30px" />

                    <TextView
                        android:id="@+id/work_zone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text=""
                        android:textColor="@color/ziti_head"
                        android:textSize="@dimen/fontsize_30px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结算方式"
                        android:textColor="@color/ziti_huise"
                        android:textSize="@dimen/fontsize_30px" />

                    <TextView
                        android:id="@+id/jz_jieshuan_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text=""
                        android:textColor="@color/ziti_head"
                        android:textSize="@dimen/fontsize_30px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="招聘人数"
                        android:textColor="@color/ziti_huise"
                        android:textSize="@dimen/fontsize_30px" />

                    <TextView
                        android:id="@+id/jz_worker_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text=""
                        android:textColor="@color/ziti_head"
                        android:textSize="@dimen/fontsize_30px" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/nav_huise" >
                </ImageView>

                <!-- 添加人数 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dip"
                        android:layout_weight="1"
                        android:background="#FEF9F5"
                        android:orientation="vertical"
                        android:paddingTop="10dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="需要"
                            android:textColor="@color/item_orangeban"
                            android:textSize="@dimen/fontsize_30px" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0.7dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/body_color" />

                        <TextView
                            android:id="@+id/totalNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="10"
                            android:textColor="#8E8D8B"
                            android:textSize="@dimen/xingchou" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#FEF9F5"
                        android:orientation="vertical"
                        android:paddingTop="10dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="已确认"
                            android:textColor="@color/item_orangeban"
                            android:textSize="@dimen/fontsize_30px" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0.7dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/body_color" />

                        <TextView
                            android:id="@+id/yescount"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="8"
                            android:textColor="@color/ziti_orange"
                            android:textSize="@dimen/xingchou" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/nosee_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/manage_icon_people"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="未处理"
                                android:textColor="@color/body_color" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="0.7dp"
                                android:layout_marginBottom="3dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/body_color" />

                            <TextView
                                android:id="@+id/nosee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6"
                                android:textColor="@color/body_color"
                                android:textSize="30sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/nav_huise" >
                </ImageView>
                <!-- 添加人数end -->

                <LinearLayout
                    android:id="@+id/jz_layout_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身高要求"
                        android:textColor="@color/ziti_huise"
                        android:textSize="@dimen/fontsize_30px" />

                    <TextView
                        android:id="@+id/jz_heigh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text="170cm以上"
                        android:textColor="@color/ziti_head"
                        android:textSize="@dimen/fontsize_30px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jz_layout_shoe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="鞋码"
                        android:textColor="@color/ziti_huise"
                        android:textSize="@dimen/fontsize_30px" />

                    <TextView
                        android:id="@+id/jz_shoe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text="40"
                        android:textColor="@color/ziti_head"
                        android:textSize="@dimen/fontsize_30px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jz_layout_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="衣服码"
                        android:textColor="@color/ziti_huise"
                        android:textSize="@dimen/fontsize_30px" />

                    <TextView
                        android:id="@+id/jz_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text="X"
                        android:textColor="@color/ziti_head"
                        android:textSize="@dimen/fontsize_30px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jz_layout_sanwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="三围"
                        android:textColor="@color/ziti_huise"
                        android:textSize="@dimen/fontsize_30px" />

                    <TextView
                        android:id="@+id/jz_sanwei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text="X"
                        android:textColor="@color/ziti_head"
                        android:textSize="@dimen/fontsize_30px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jz_health_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是否需要健康证"
                        android:textColor="@color/ziti_huise"
                        android:textSize="@dimen/fontsize_30px" />

                    <TextView
                        android:id="@+id/jz_health_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text="需要"
                        android:textColor="@color/ziti_head"
                        android:textSize="@dimen/fontsize_30px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jz_layout_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="擅长的语言"
                        android:textColor="@color/ziti_huise"
                        android:textSize="@dimen/fontsize_30px" />

                    <TextView
                        android:id="@+id/jz_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text=""
                        android:textColor="@color/ziti_head"
                        android:textSize="@dimen/fontsize_30px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="详细地址"
                        android:textColor="@color/ziti_huise"
                        android:textSize="@dimen/fontsize_30px" />

                    <TextView
                        android:id="@+id/jz_addressdetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="宝安区龙华区熟悉的谁看见方式的"
                        android:textColor="@color/ziti_head"
                        android:textSize="@dimen/fontsize_30px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="兼职描述"
                        android:textColor="@color/ziti_huise"
                        android:textSize="@dimen/fontsize_30px" />

                    <TextView
                        android:id="@+id/jz_work_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主要工作接待香港的客户主要工作接待香港的客户主要工作接待香港的客户主要工作接待香港的客户主要工作接待香港的客户主要工作接待香港的客户"
                        android:textColor="@color/ziti_head"
                        android:textSize="@dimen/fontsize_30px" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/nav_huise" >
    </ImageView>

    <LinearLayout
        android:id="@+id/bootm_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="3dp"
        android:background="#ffffff"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/manage"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bord_lianxishangjia"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="修改信息"
            android:textColor="@color/lianxshengjia"
            android:textSize="@dimen/fontsize_40px" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/re_shangjia"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bord_baomingcanjia"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="重新上架"
                android:textColor="@color/ziti_orange"
                android:textSize="@dimen/fontsize_40px" />

            <Button
                android:id="@+id/baomingnum"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignRight="@id/baoming"
                android:background="@drawable/redboxborderjianli"
                android:text="10"
                android:textColor="#ffffff"
                android:textSize="14dip"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>