<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nav_huise"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/yellow_bg" >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/nav_btn_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/xinyizhiqx"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <com.quark.localslideshowview.LocalSlideShowView
        android:id="@+id/slideshowView"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.80" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.20"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/liaojie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|left"
            android:background="@drawable/bord_baomingcanjia"
            android:onClick="showAlertDialog"
            android:paddingBottom="13dip"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="13dp"
            android:text="@string/woyijingliaojie"
            android:textColor="@color/ziti_orange"
            android:textSize="18sp" />

        <Button
            android:id="@+id/jiaonachengyijin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginLeft="15dip"
            android:background="@drawable/bord_baomingcanjia"
            android:paddingBottom="13dip"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="13dp"
            android:text="@string/jiaonachengyijin"
            android:textColor="@color/ziti_orange"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/quhuichengyijin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginLeft="15dip"
            android:background="@drawable/bord_lianxishangjia"
            android:paddingBottom="13dip"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="13dp"
            android:text="@string/quhuichengyijin"
            android:textColor="@color/lianxshengjia"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>